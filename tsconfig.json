// Read more:
// https://www.typescriptlang.org/tsconfig
{
	"compilerOptions": {
		"allowJs": false,
		"baseUrl": ".",
		"checkJs": false,
		"esModuleInterop": true,
		"exactOptionalPropertyTypes": false,
		"forceConsistentCasingInFileNames": true,
		"importHelpers": true,
		"incremental": true,
		"isolatedModules": true,
		"lib": ["DOM", "DOM.Iterable", "ES2021", "WebWorker"],
		"module": "ES2022",
		"moduleResolution": "Node",
		"noEmit": true,
		"paths": {
			"+github": ["./src/github/index"],
			"+rules": ["./src/rules/index"],
			"+utilities": ["./src/utilities/index"],
			"+validator": ["./src/validator/index"]
		},
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"sourceMap": true,
		"strict": true,
		"target": "ES2021",
		"tsBuildInfoFile": "./node_modules/.cache/typescript/.tsbuildinfo",
		"useDefineForClassFields": true,
		"verbatimModuleSyntax": true
	},
	"exclude": [
		".git",
		".idea",
		".vscode",
		".yarn",
		"coverage",
		"node_modules",
		"release",
		".pnp.*"
	],
	"include": [
		"**/*.ts",
		"**/*.tsx",
		"**/eslint.config.js",
		"**/prettier.config.cjs"
	]
}
